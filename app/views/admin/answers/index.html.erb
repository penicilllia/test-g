<p id="notice"><%= notice %></p>

<h1><%= t('.header') %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to t('.show'), answer %></td>
        <td><%= link_to t('.edit'), edit_admin_answer_path(answer) %></td>
        <td><%= link_to t('.destroy'), answer, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_admin_answer_path %>
