<div class="row justify-content-center p-3">
  <h1><%= t('tests.index.header') %></h1>
  
  <div class="container">
    <div class="table">
      <table>
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th class="col-md-3"><%= t('.level') %></th>
          <th class="col-md-3"><%= t('.questions') %></th>
          <th class="col-md-3"><%= t('.actions') %></th>
        </tr>

        <%= render @tests %>
      </table>
    </div>
  </div>
</div>
